<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#44000000">
    <com.example.viewdraghelper.Demo01Layout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/read"
            android:id="@+id/iv_read"
            android:layout_alignBottom="@+id/iv_home"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="24dp"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/lock_slide"
            android:id="@+id/iv_arrow_left"
            android:rotation="180"
            android:layout_alignBottom="@id/iv_home"
            android:layout_marginBottom="24dp"
            android:layout_toLeftOf="@id/iv_home"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/lock_slide"
            android:id="@+id/iv_arrow_right"
            android:layout_toRightOf="@id/iv_home"
            android:layout_alignBottom="@id/iv_home"
            android:layout_marginBottom="24dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/iv_unlock"
            app:srcCompat="@drawable/unlock"
            android:layout_alignParentRight="true"
            android:layout_marginRight="24dp"
            android:layout_alignBottom="@+id/iv_home"
            android:layout_marginBottom="8dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/lock_slide_up"
            android:id="@+id/iv_arrow_top"
            android:layout_below="@id/iv_redbag"
            android:layout_centerHorizontal="true"/>
        <ImageView
            android:id="@+id/iv_redbag"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp"
            app:srcCompat="@drawable/ic_lock_redbag"
            android:layout_centerHorizontal="true"/>

        <ImageView
            android:id="@+id/iv_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:srcCompat="@drawable/circle"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/iv_arrow_top"
            android:layout_margin="16dp"/>


    </com.example.viewdraghelper.Demo01Layout>
</RelativeLayout>